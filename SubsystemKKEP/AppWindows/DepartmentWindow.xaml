<Window x:Class="SubsystemKKEP.AppWindows.DepartmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SubsystemKKEP.AppWindows"
        mc:Ignorable="d"
        Height="800" MinHeight="800"
        Width="1200" MinWidth="1200"
        WindowState="Maximized" 
        WindowStartupLocation="CenterScreen"
        Title="Отделение. Личный кабинет">
    <Grid Style="{StaticResource MainGrid}">
        <Border Style="{StaticResource MainBlockInWindow}"
                Margin="20">
            <Grid Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <Image Source="/SubsystemKKEP;component/Resources/logo.png" 
                           Margin="5"/>
                    <Button x:Name="BtnAccount" 
                            TabIndex="1"
                            Style="{StaticResource BtnInMenu}" Click="BtnAccount_Click">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                <Image Source="/SubsystemKKEP;component/Resources/User.png"
                                       Style="{StaticResource IconButton}"></Image>
                                <TextBlock Text="Личный кабинет"
                                           Style="{StaticResource TextInBtnMenu}"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button x:Name="BtnAcademicPerformance" 
                            TabIndex="2"
                            Click="BtnAcademicPerformance_Click"
                            Style="{StaticResource BtnInMenu}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                <Image Source="/SubsystemKKEP;component/Resources/Analis.png"
                                       Style="{StaticResource IconButton}" Height="25" Width="25" Margin="1,0,6,0"></Image>
                                <TextBlock Text="Успеваемость"
                                           Style="{StaticResource TextInBtnMenu}"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button x:Name="BtnSignOut" 
                            TabIndex="3"
                            Style="{StaticResource BtnInMenu}" Click="BtnSignOut_Click">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                <Image Source="/SubsystemKKEP;component/Resources/Sign_Out.png"
                                       Margin="5,0,0,0"
                                       Style="{StaticResource IconButton}"></Image>
                                <TextBlock Text="Выход"
                                           Style="{StaticResource TextInBtnMenu}"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
                <Grid Background="Transparent"
                      Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <Image Source="/SubsystemKKEP;component/Resources/User.png"
                               x:Name="ImgHeader"
                               Style="{StaticResource IconButton}" Width="54" Height="57" Margin="0"></Image>
                        <TextBlock Text="Личный кабинет"
                                   x:Name="TextBlockHeader"
                                   Style="{StaticResource HeaderText}" Margin="10,0,0,0"/>
                    </StackPanel>
                    <Frame x:Name="DepartmentFrame"
                           Background="Transparent"
                           Grid.Row="1"
                           NavigationUIVisibility="Hidden"></Frame>
                </Grid>

            </Grid>
        </Border>

    </Grid>
</Window>
